
<launch>

    <node name="base_controller_node" pkg="zmcrobot_ros" type="zmcrobot_ros" output="screen">
            <param name="port" value="/dev/ttyACM0" />
            <param name="baud" value="115200" />
            <param name="timeout" value="500000" />
            <param name="simulate" value= "true" />
            <param name="use_imu" value="true"/>
            <param name="alpha"  value="0.6" />

    </node>

    <node name ="teleop" pkg="zmcrobot_ros" type="teleop_keyboard" output="screen">
            <param name="v_max" value="0.2" />
            <param name="v_step" value="0.02"/>

            <param name="w_max" value="2" />
            <param name= "w_step" value="0.1" />
    </node>

</launch>
